# =============================================================================
# PF-CORE CI/CD Agent Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# -----------------------------------------------------------------------------
# Anthropic API (Claude Agent SDK)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your-anthropic-api-key

# -----------------------------------------------------------------------------
# GitHub Configuration
# -----------------------------------------------------------------------------
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_ORG=your-github-organization
GITHUB_TEMPLATE_REPO=pf-core-template

# -----------------------------------------------------------------------------
# Digital Ocean Configuration
# -----------------------------------------------------------------------------
DO_API_TOKEN=your-digital-ocean-api-token
DO_SSH_KEY_FINGERPRINT=your-ssh-key-fingerprint
DO_REGION=lon1
DO_DEFAULT_IMAGE=ubuntu-22-04-x64

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_MANAGEMENT_API_TOKEN=your-management-api-token

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
AGENT_MODEL=claude-sonnet-4-20250514
AGENT_MAX_TOKENS=4096
AGENT_TEMPERATURE=0.1

# -----------------------------------------------------------------------------
# Database Configuration (Audit Storage)
# -----------------------------------------------------------------------------
AUDIT_TABLE=pf_cicd_audit_log
AUDIT_ENABLED=true
