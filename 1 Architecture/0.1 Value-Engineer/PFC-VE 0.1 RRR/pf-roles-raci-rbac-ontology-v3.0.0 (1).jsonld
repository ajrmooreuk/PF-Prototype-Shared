{
  "@context": {
    "@vocab": "https://schema.org/",
    "pf": "https://platform-foundation.io/ontology/v1/",
    "raci": "https://platform-foundation.io/ontology/v1/raci/",
    "rbac": "https://platform-foundation.io/ontology/v1/rbac/",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "owl": "http://www.w3.org/2002/07/owl#",
    "xsd": "http://www.w3.org/2001/XMLSchema#"
  },
  "@type": "owl:Ontology",
  "@id": "pf:ontology:roles-raci-rbac-v3.0.0",
  "name": "Platform Foundation: Roles, RACI & RBAC Ontology",
  "version": "3.0.0",
  "dateCreated": "2025-10-11",
  "dateModified": "2025-10-11",
  "creator": "Amanda Moore",
  "description": "Comprehensive ontology for organizational roles, RACI accountability framework, and role-based access control (RBAC) for multi-venture platform foundation",
  "domain": "Organizational Governance, Access Management, Accountability Framework",
  "subDomains": [
    "Executive Leadership Structure",
    "Functional Accountability (RACI)",
    "Role-Based Access Control (RBAC)",
    "Permission & Capability Management",
    "Matrix Organization Modeling"
  ],
  "businessObjectives": [
    "Enable multi-venture role portability",
    "Support matrix management structures",
    "Facilitate AI agent authorization decisions",
    "Ensure RACI accountability clarity",
    "Enable dynamic, context-aware access control",
    "Support organizational scale flexibility (startup to enterprise)"
  ],
  "dependencies": [
    {
      "ontologyId": "pf:ontology:individual-v1",
      "reason": "INDIVIDUALS (schema:Person) fill ROLES"
    },
    {
      "ontologyId": "pf:ontology:user-v1",
      "reason": "USERS link to INDIVIDUALS and are governed by RBAC"
    },
    {
      "ontologyId": "pf:ontology:organization-v1",
      "reason": "ORGANIZATIONS contain ROLES and own VSOM Strategy"
    },
    {
      "ontologyId": "pf:ontology:vsom-strategy-v1",
      "reason": "ROLES are accountable for Strategy formulation and implementation"
    }
  ],
  "useCases": [
    {
      "id": "UC-001",
      "name": "Multi-Venture Role Assignment",
      "description": "Individual holds different roles across multiple ventures (e.g., CEO of Venture A, Advisor to Venture B, CMO of Venture C)"
    },
    {
      "id": "UC-002",
      "name": "RACI Matrix Generation",
      "description": "For any business process or activity, determine who is Responsible, Accountable, Consulted, and Informed"
    },
    {
      "id": "UC-003",
      "name": "Permission Resolution for Users",
      "description": "AI agent queries: 'Can User X perform Action Y on Resource Z?' based on RBAC policies"
    },
    {
      "id": "UC-004",
      "name": "Organizational Capability Gap Analysis",
      "description": "Identify capability gaps when executive or functional roles are unfilled or understaffed"
    },
    {
      "id": "UC-005",
      "name": "Cross-Functional Collaboration Discovery",
      "description": "Discover collaboration paths and who should be consulted when traversing functional boundaries"
    }
  ],
  "entities": [
    {
      "@type": "rdfs:Class",
      "@id": "pf:ExecutiveRole",
      "rdfs:subClassOf": "schema:OrganizationalRole",
      "rdfs:label": "Executive Role",
      "rdfs:comment": "A C-Suite or senior executive position with strategic accountability within an organization",
      "schemaOrgAlignment": {
        "baseType": "schema:OrganizationalRole",
        "rationale": "schema:OrganizationalRole provides the foundation for any organizational position, which we extend for executive-specific attributes",
        "extensions": [
          "roleCode",
          "roleCategory",
          "strategicFocus",
          "vsomComponent",
          "bscPerspective",
          "keyFrameworks",
          "primaryMetrics",
          "aiVisibilityRole",
          "seniorityLevel"
        ],
        "alternativesConsidered": [
          "schema:Role - too generic",
          "schema:EmployeeRole - limited to employment context"
        ]
      },
      "properties": [
        {
          "@id": "pf:roleCode",
          "@type": "rdf:Property",
          "rdfs:label": "Role Code",
          "rdfs:comment": "Short code identifier for the role (e.g., CEO, CMO, CFO)",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "pattern": "^[A-Z]{2,5}$",
          "required": true,
          "example": "CEO"
        },
        {
          "@id": "pf:roleTitle",
          "@type": "rdf:Property",
          "rdfs:label": "Role Title",
          "rdfs:comment": "Full formal title of the executive role",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "required": true,
          "example": "Chief Executive Officer"
        },
        {
          "@id": "pf:roleCategory",
          "@type": "rdf:Property",
          "rdfs:label": "Role Category",
          "rdfs:comment": "Grouping category for the executive role based on functional domain",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Core Traditional CSuite",
            "Data Analytics CSuite",
            "Revenue Customer CSuite",
            "Risk Governance CSuite",
            "Strategy Innovation CSuite",
            "People Culture CSuite",
            "Commercial CSuite"
          ],
          "required": true,
          "example": "Core Traditional CSuite"
        },
        {
          "@id": "pf:strategicFocus",
          "@type": "rdf:Property",
          "rdfs:label": "Strategic Focus",
          "rdfs:comment": "Primary strategic area of responsibility for this role",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "required": false,
          "example": "Corporate Leadership & Vision"
        },
        {
          "@id": "pf:vsomComponent",
          "@type": "rdf:Property",
          "rdfs:label": "VSOM Component",
          "rdfs:comment": "Alignment with VSOM (Vision, Strategy, Operations, Metrics) framework component",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "required": false,
          "example": "Corporate Vision & Strategy"
        },
        {
          "@id": "pf:bscPerspective",
          "@type": "rdf:Property",
          "rdfs:label": "Balanced Scorecard Perspective",
          "rdfs:comment": "Primary Balanced Scorecard perspective this role aligns with",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Financial",
            "Customer",
            "Internal Process",
            "Learning & Growth",
            "Innovation",
            "Technology",
            "Risk/Governance",
            "Stakeholder/ESG",
            "Strategic",
            "Integrated View"
          ],
          "required": false,
          "example": "Integrated View"
        },
        {
          "@id": "pf:keyFrameworks",
          "@type": "rdf:Property",
          "rdfs:label": "Key Frameworks",
          "rdfs:comment": "Management and strategic frameworks typically used by this role",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "0..*",
          "required": false,
          "example": ["Blue Ocean Strategy", "Corporate Strategy", "BSC"]
        },
        {
          "@id": "pf:primaryMetrics",
          "@type": "rdf:Property",
          "rdfs:label": "Primary Metrics",
          "rdfs:comment": "Key Performance Indicators (KPIs) owned or primarily tracked by this role",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "0..*",
          "required": false,
          "example": ["Revenue Growth", "Market Position", "Stakeholder Value"]
        },
        {
          "@id": "pf:aiVisibilityRole",
          "@type": "rdf:Property",
          "rdfs:label": "AI Visibility Role",
          "rdfs:comment": "Description of how this role relates to AI visibility and brand authority strategy",
          "schema:domainIncludes": "pf:ExecutiveRole",
          "schema:rangeIncludes": "xsd:string",
          "required": false,
          "example": "Executive AI Thought Leadership & Strategic Direction"
        },
        {
          "@id": "pf:seniorityLevel",
          "@type": "rdf:Property",
          "rdfs:label": "Seniority Level",
          "rdfs:comment": "Numeric seniority level where 1=C-Suite, 2=VP, 3=Director, etc.",
          "schema:domainIncludes": ["pf:ExecutiveRole", "pf:FunctionalRole"],
          "schema:rangeIncludes": "xsd:integer",
          "minimum": 1,
          "maximum": 10,
          "required": true,
          "example": 1
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "pf:FunctionalRole",
      "rdfs:subClassOf": "schema:EmployeeRole",
      "rdfs:label": "Functional Role",
      "rdfs:comment": "Operational or functional position below executive level, typically within a specific department or function",
      "schemaOrgAlignment": {
        "baseType": "schema:EmployeeRole",
        "rationale": "schema:EmployeeRole is appropriate for non-executive organizational positions",
        "extensions": [
          "function",
          "seniorityLevel"
        ]
      },
      "properties": [
        {
          "@id": "pf:function",
          "@type": "rdf:Property",
          "rdfs:label": "Function",
          "rdfs:comment": "Functional department or area this role belongs to",
          "schema:domainIncludes": "pf:FunctionalRole",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Marketing",
            "Sales",
            "Operations",
            "Finance",
            "Technology",
            "HR",
            "Legal",
            "Product",
            "Data",
            "Customer Success",
            "Strategy",
            "Innovation",
            "Compliance",
            "Security"
          ],
          "required": true,
          "example": "Marketing"
        },
        {
          "@id": "pf:roleTitle",
          "@type": "rdf:Property",
          "rdfs:label": "Role Title",
          "rdfs:comment": "Full title of the functional role",
          "schema:domainIncludes": "pf:FunctionalRole",
          "schema:rangeIncludes": "xsd:string",
          "required": true,
          "example": "Marketing Manager"
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "pf:RoleAssignment",
      "rdfs:subClassOf": "schema:Thing",
      "rdfs:label": "Role Assignment",
      "rdfs:comment": "Assignment of an INDIVIDUAL (schema:Person) to a ROLE within an ORGANIZATION context. Enables multi-venture role portfolios.",
      "schemaOrgAlignment": {
        "baseType": "schema:Thing",
        "rationale": "No direct schema.org equivalent for role assignment as a reified relationship",
        "extensions": [
          "individual",
          "role",
          "organization",
          "assignmentType",
          "timeCommitment",
          "isActive",
          "startDate",
          "endDate"
        ]
      },
      "properties": [
        {
          "@id": "pf:individual",
          "@type": "rdf:Property",
          "rdfs:label": "Individual",
          "rdfs:comment": "The INDIVIDUAL (schema:Person) who is assigned to the role",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "schema:Person",
          "cardinality": "1..1",
          "required": true,
          "businessMeaning": "The actual person filling this role"
        },
        {
          "@id": "pf:role",
          "@type": "rdf:Property",
          "rdfs:label": "Role",
          "rdfs:comment": "The ROLE being assigned (ExecutiveRole or FunctionalRole)",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": ["pf:ExecutiveRole", "pf:FunctionalRole"],
          "cardinality": "1..1",
          "required": true,
          "businessMeaning": "The organizational position being filled"
        },
        {
          "@id": "pf:organization",
          "@type": "rdf:Property",
          "rdfs:label": "Organization",
          "rdfs:comment": "The ORGANIZATION within which this role assignment exists",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "schema:Organization",
          "cardinality": "1..1",
          "required": true,
          "businessMeaning": "The venture, company, or organizational unit context"
        },
        {
          "@id": "pf:assignmentType",
          "@type": "rdf:Property",
          "rdfs:label": "Assignment Type",
          "rdfs:comment": "Nature of the role assignment",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Primary",
            "Secondary",
            "Acting",
            "Interim",
            "Advisory",
            "Board",
            "Consultant"
          ],
          "required": true,
          "example": "Primary"
        },
        {
          "@id": "pf:timeCommitment",
          "@type": "rdf:Property",
          "rdfs:label": "Time Commitment",
          "rdfs:comment": "Percentage of time commitment for this role (0-100)",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "xsd:float",
          "minimum": 0,
          "maximum": 100,
          "required": false,
          "example": 100.0
        },
        {
          "@id": "pf:isActive",
          "@type": "rdf:Property",
          "rdfs:label": "Is Active",
          "rdfs:comment": "Whether this role assignment is currently active",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "xsd:boolean",
          "required": true,
          "default": true
        },
        {
          "@id": "pf:startDate",
          "@type": "rdf:Property",
          "rdfs:label": "Start Date",
          "rdfs:comment": "Date when the role assignment began",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "xsd:date",
          "required": false
        },
        {
          "@id": "pf:endDate",
          "@type": "rdf:Property",
          "rdfs:label": "End Date",
          "rdfs:comment": "Date when the role assignment ended (null if active)",
          "schema:domainIncludes": "pf:RoleAssignment",
          "schema:rangeIncludes": "xsd:date",
          "cardinality": "0..1",
          "required": false
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "raci:RACIAssignment",
      "rdfs:subClassOf": "schema:Thing",
      "rdfs:label": "RACI Assignment",
      "rdfs:comment": "Defines who is Responsible, Accountable, Consulted, or Informed for a specific activity or process. Applied to ROLES, not individuals.",
      "schemaOrgAlignment": {
        "baseType": "schema:Thing",
        "rationale": "RACI is a governance concept with no direct schema.org equivalent",
        "extensions": [
          "activity",
          "role",
          "raciType",
          "context",
          "organization"
        ]
      },
      "properties": [
        {
          "@id": "raci:activity",
          "@type": "rdf:Property",
          "rdfs:label": "Activity",
          "rdfs:comment": "The activity, process, or action for which RACI accountability is defined",
          "schema:domainIncludes": "raci:RACIAssignment",
          "schema:rangeIncludes": ["schema:Action", "pf:BusinessProcess"],
          "cardinality": "1..1",
          "required": true,
          "businessMeaning": "What needs to be done"
        },
        {
          "@id": "raci:role",
          "@type": "rdf:Property",
          "rdfs:label": "Role",
          "rdfs:comment": "The ROLE that has this RACI assignment",
          "schema:domainIncludes": "raci:RACIAssignment",
          "schema:rangeIncludes": ["pf:ExecutiveRole", "pf:FunctionalRole"],
          "cardinality": "1..1",
          "required": true,
          "businessMeaning": "Who (by role, not individual) has this accountability"
        },
        {
          "@id": "raci:raciType",
          "@type": "rdf:Property",
          "rdfs:label": "RACI Type",
          "rdfs:comment": "The type of RACI accountability: Responsible (does the work), Accountable (owns the outcome), Consulted (provides input), or Informed (kept updated)",
          "schema:domainIncludes": "raci:RACIAssignment",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Responsible",
            "Accountable",
            "Consulted",
            "Informed"
          ],
          "required": true,
          "example": "Accountable"
        },
        {
          "@id": "raci:context",
          "@type": "rdf:Property",
          "rdfs:label": "Context",
          "rdfs:comment": "Additional contextual notes about this RACI assignment",
          "schema:domainIncludes": "raci:RACIAssignment",
          "schema:rangeIncludes": "xsd:string",
          "required": false
        },
        {
          "@id": "raci:organization",
          "@type": "rdf:Property",
          "rdfs:label": "Organization",
          "rdfs:comment": "Organization context for this RACI assignment (optional, for multi-org scenarios)",
          "schema:domainIncludes": "raci:RACIAssignment",
          "schema:rangeIncludes": "schema:Organization",
          "cardinality": "0..1",
          "required": false
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "pf:Capability",
      "rdfs:subClassOf": "schema:Action",
      "rdfs:label": "Capability",
      "rdfs:comment": "An ability, skill, or competency that can be performed by a role or required for a role",
      "schemaOrgAlignment": {
        "baseType": "schema:Action",
        "rationale": "Capabilities are potential actions that can be performed",
        "extensions": [
          "capabilityType",
          "proficiencyRequired",
          "relatedFrameworks"
        ]
      },
      "properties": [
        {
          "@id": "pf:capabilityName",
          "@type": "rdf:Property",
          "rdfs:label": "Capability Name",
          "rdfs:comment": "Name of the capability",
          "schema:domainIncludes": "pf:Capability",
          "schema:rangeIncludes": "xsd:string",
          "required": true,
          "example": "Strategic Planning"
        },
        {
          "@id": "pf:capabilityType",
          "@type": "rdf:Property",
          "rdfs:label": "Capability Type",
          "rdfs:comment": "Category of capability",
          "schema:domainIncludes": "pf:Capability",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Technical",
            "Business",
            "Leadership",
            "Analytical",
            "Creative",
            "Strategic",
            "Operational"
          ],
          "required": false,
          "example": "Strategic"
        },
        {
          "@id": "pf:proficiencyRequired",
          "@type": "rdf:Property",
          "rdfs:label": "Proficiency Required",
          "rdfs:comment": "Level of proficiency required for this capability",
          "schema:domainIncludes": "pf:Capability",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Basic",
            "Intermediate",
            "Advanced",
            "Expert"
          ],
          "required": false,
          "example": "Expert"
        },
        {
          "@id": "pf:relatedFrameworks",
          "@type": "rdf:Property",
          "rdfs:label": "Related Frameworks",
          "rdfs:comment": "Management or technical frameworks related to this capability",
          "schema:domainIncludes": "pf:Capability",
          "schema:rangeIncludes": "xsd:string",
          "cardinality": "0..*",
          "required": false,
          "example": ["Blue Ocean Strategy", "BSC"]
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "rbac:Permission",
      "rdfs:subClassOf": "schema:Thing",
      "rdfs:label": "Permission",
      "rdfs:comment": "Authorization to perform an action on a resource. Applied to USERS (not roles directly) through AccessPolicies.",
      "schemaOrgAlignment": {
        "baseType": "schema:Thing",
        "rationale": "No schema.org equivalent for access control permissions",
        "extensions": [
          "action",
          "resource",
          "conditions",
          "effect"
        ]
      },
      "properties": [
        {
          "@id": "rbac:action",
          "@type": "rdf:Property",
          "rdfs:label": "Action",
          "rdfs:comment": "The action that is permitted or denied",
          "schema:domainIncludes": "rbac:Permission",
          "schema:rangeIncludes": "xsd:string",
          "enum": [
            "Create",
            "Read",
            "Update",
            "Delete",
            "Execute",
            "Approve",
            "Share",
            "Export",
            "Import",
            "Publish"
          ],
          "required": true,
          "example": "Approve"
        },
        {
          "@id": "rbac:resource",
          "@type": "rdf:Property",
          "rdfs:label": "Resource",
          "rdfs:comment": "The resource type or specific resource identifier this permission applies to",
          "schema:domainIncludes": "rbac:Permission",
          "schema:rangeIncludes": "xsd:string",
          "required": true,
          "example": "Budget"
        },
        {
          "@id": "rbac:conditions",
          "@type": "rdf:Property",
          "rdfs:label": "Conditions",
          "rdfs:comment": "Contextual conditions that must be met for permission to apply (e.g., value thresholds, time constraints)",
          "schema:domainIncludes": "rbac:Permission",
          "schema:rangeIncludes": "rbac:AccessCondition",
          "cardinality": "0..*",
          "required": false,
          "example": {"attribute": "amount", "operator": "lessThan", "value": 10000}
        },
        {
          "@id": "rbac:effect",
          "@type": "rdf:Property",
          "rdfs:label": "Effect",
          "rdfs:comment": "Whether this permission allows or denies the action",
          "schema:domainIncludes": "rbac:Permission",
          "schema:rangeIncludes": "xsd:string",
          "enum": ["Allow", "Deny"],
          "default": "Allow",
          "required": true,
          "example": "Allow"
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "rbac:AccessPolicy",
      "rdfs:subClassOf": "schema:Thing",
      "rdfs:label": "Access Policy",
      "rdfs:comment": "Binds ROLES to PERMISSIONS, which are then inherited by USERS who fill those roles. This is the core RBAC mechanism.",
      "schemaOrgAlignment": {
        "baseType": "schema:Thing",
        "rationale": "No schema.org equivalent for access control policies",
        "extensions": [
          "role",
          "permissions",
          "organization",
          "priority",
          "isActive"
        ]
      },
      "properties": [
        {
          "@id": "rbac:role",
          "@type": "rdf:Property",
          "rdfs:label": "Role",
          "rdfs:comment": "The ROLE that this policy applies to",
          "schema:domainIncludes": "rbac:AccessPolicy",
          "schema:rangeIncludes": ["pf:ExecutiveRole", "pf:FunctionalRole"],
          "cardinality": "1..1",
          "required": true,
          "businessMeaning": "USERS who fill this role inherit these permissions"
        },
        {
          "@id": "rbac:permissions",
          "@type": "rdf:Property",
          "rdfs:label": "Permissions",
          "rdfs:comment": "The set of permissions granted by this policy",
          "schema:domainIncludes": "rbac:AccessPolicy",
          "schema:rangeIncludes": "rbac:Permission",
          "cardinality": "1..*",
          "required": true
        },
        {
          "@id": "rbac:organization",
          "@type": "rdf:Property",
          "rdfs:label": "Organization",
          "rdfs:comment": "Organization context - if specified, policy only applies within this organization",
          "schema:domainIncludes": "rbac:AccessPolicy",
          "schema:rangeIncludes": "schema:Organization",
          "cardinality": "0..1",
          "required": false
        },
        {
          "@id": "rbac:priority",
          "@type": "rdf:Property",
          "rdfs:label": "Priority",
          "rdfs:comment": "Conflict resolution priority (higher = takes precedence)",
          "schema:domainIncludes": "rbac:AccessPolicy",
          "schema:rangeIncludes": "xsd:integer",
          "required": false,
          "default": 0
        },
        {
          "@id": "rbac:isActive",
          "@type": "rdf:Property",
          "rdfs:label": "Is Active",
          "rdfs:comment": "Whether this policy is currently active",
          "schema:domainIncludes": "rbac:AccessPolicy",
          "schema:rangeIncludes": "xsd:boolean",
          "required": true,
          "default": true
        }
      ]
    },
    {
      "@type": "rdfs:Class",
      "@id": "rbac:AccessCondition",
      "rdfs:subClassOf": "schema:Thing",
      "rdfs:label": "Access Condition",
      "rdfs:comment": "A conditional constraint that must be satisfied for a permission to apply",
      "properties": [
        {
          "@id": "rbac:attribute",
          "@type": "rdf:Property",
          "rdfs:label": "Attribute",
          "rdfs:comment": "The attribute to evaluate",
          "schema:domainIncludes": "rbac:AccessCondition",
          "schema:rangeIncludes": "xsd:string",
          "required": true,
          "example": "amount"
        },
        {
          "@id": "rbac:operator",
