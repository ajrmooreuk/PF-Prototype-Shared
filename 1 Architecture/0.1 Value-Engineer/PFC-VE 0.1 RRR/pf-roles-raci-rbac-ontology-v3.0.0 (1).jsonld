  "businessRules": [
    {
      "id": "BR-001",
      "name": "One Accountable Per Activity",
      "description": "Each activity must have exactly one role marked as Accountable in RACI",
      "severity": "error",
      "formalLogic": "∀activity ∈ Activity: COUNT(RACIAssignment WHERE raciType='Accountable' AND activity=activity) = 1",
      "validation": "For each activity, count RACI assignments with raciType='Accountable' must equal exactly 1"
    },
    {
      "id": "BR-002",
      "name": "At Least One Responsible",
      "description": "Each activity must have at least one Responsible role",
      "severity": "error",
      "formalLogic": "∀activity ∈ Activity: COUNT(RACIAssignment WHERE raciType='Responsible' AND activity=activity) ≥ 1",
      "validation": "For each activity, count RACI assignments with raciType='Responsible' must be at least 1"
    },
    {
      "id": "BR-003",
      "name": "No Circular Reporting",
      "description": "Reporting relationships must not create cycles",
      "severity": "error",
      "formalLogic": "GRAPH(reportsTo) MUST BE ACYCLIC",
      "validation": "Traverse reportsTo relationships and detect cycles"
    },
    {
      "id": "BR-004",
      "name": "Active Assignment Has No End Date",
      "description": "If RoleAssignment.isActive=true, then endDate must be null",
      "severity": "error",
      "formalLogic": "∀ra ∈ RoleAssignment: (ra.isActive = true) → (ra.endDate IS NULL)",
      "validation": "For each RoleAssignment where isActive=true, endDate must be null"
    },
    {
      "id": "BR-005",
      "name": "Time Commitment Range",
      "description": "Total time commitment across all active assignments for a person should not exceed 100%",
      "severity": "warning",
      "formalLogic": "∀person ∈ Person: SUM(RoleAssignment.timeCommitment WHERE individual=person AND isActive=true) ≤ 100",
      "validation": "For each person, sum of timeCommitment across active assignments should not exceed 100"
    },
    {
      "id": "BR-006",
      "name": "C-Suite Seniority Level",
      "description": "Executive roles in C-Suite categories should have seniorityLevel=1",
      "severity": "warning",
      "formalLogic": "∀role ∈ ExecutiveRole: (role.roleCategory CONTAINS 'CSuite') → (role.seniorityLevel = 1)",
      "validation": "For ExecutiveRole where roleCategory contains 'CSuite', seniorityLevel should be 1"
    },
    {
      "id": "BR-007",
      "name": "Permission Conflict Resolution",
      "description": "When multiple policies apply, highest priority wins. Deny overrides Allow at same priority.",
      "severity": "info",
      "formalLogic": "POLICY_RESOLUTION: ORDER BY priority DESC, effect='Deny' FIRST",
      "validation": "When resolving permissions, sort policies by priority descending, with Deny effect taking precedence over Allow at same priority level"
    },
    {
      "id": "BR-008",
      "name": "User Inherits Role Permissions",
      "description": "USERS inherit permissions from ROLES they fill via RoleAssignments",
      "severity": "info",
      "formalLogic": "∀user ∈ User, ∀ra ∈ RoleAssignment WHERE ra.individual = user.person AND ra.isActive = true: user INHERITS permissions FROM AccessPolicy WHERE role = ra.role",
      "validation": "User permissions are derived from active RoleAssignments to roles with AccessPolicies"
    },
    {
      "id": "BR-009",
      "name": "RACI Applies to Roles Not Individuals",
      "description": "RACI assignments are made to ROLES, not directly to INDIVIDUALS",
      "severity": "info",
      "formalLogic": "∀raci ∈ RACIAssignment: raci.role ∈ (ExecutiveRole ∪ FunctionalRole)",
      "validation": "RACI role property must reference ExecutiveRole or FunctionalRole, never Person directly"
    },
    {
      "id": "BR-010",
      "name": "Organization Context Consistency",
      "description": "When resolving permissions or RACI for a specific organizational context, only consider assignments/policies for that organization",
      "severity": "info",
      "formalLogic": "∀query(user, action, resource, org): FILTER(AccessPolicy WHERE organization IS NULL OR organization = org)",
      "validation": "Filter policies by organization context when resolving permissions"
    }
  ],
  "aiCapabilities": {
    "authorization": {
      "description": "Determine if a USER can perform an action on a resource",
      "queryPattern": "Can {user} {action} {resource} in {organization}?",
      "resolutionSteps": [
        "1. Identify the USER and their linked INDIVIDUAL (schema:Person)",
        "2. Find all active RoleAssignments for that INDIVIDUAL in the specified ORGANIZATION",
        "3. For each assigned ROLE, retrieve all AccessPolicies that govern that role",
        "4. Collect all Permissions from those policies",
        "5. Filter permissions matching the requested action and resource",
        "6. Evaluate any conditions on the permissions",
        "7. Apply conflict resolution (priority, Deny override)",
        "8. Return authorization decision: Allow or Deny"
      ],
      "exampleQuery": "Can user 'amanda.moore@baiv.io' approve budget over $10K in BAIV organization?",
      "graphTraversal": "User -> links to -> Person -> hasRoleAssignment -> RoleAssignment -> assignedRole -> Role -> governedBy -> AccessPolicy -> grantsPermission -> Permission"
    },
    "raciQuery": {
      "description": "Find which ROLES have specific RACI accountability for an activity",
      "queryPattern": "Who is {raciType} for {activity}?",
      "resolutionSteps": [
        "1. Find RACIAssignments for the specified activity",
        "2. Filter by raciType (Responsible, Accountable, Consulted, Informed)",
        "3. Return the ROLES that have this RACI assignment",
        "4. Optionally resolve to current INDIVIDUALS via active RoleAssignments"
      ],
      "exampleQuery": "Who is Accountable for 'AI Strategy Development' activity?",
      "graphTraversal": "Activity -> hasRACIAssignment -> RACIAssignment (filter by raciType) -> role -> ExecutiveRole/FunctionalRole"
    },
    "raciMatrixGeneration": {
