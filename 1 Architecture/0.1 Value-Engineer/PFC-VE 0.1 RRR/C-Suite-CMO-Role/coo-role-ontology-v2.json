          "pf:examples": [
            "Capability Development Milestones",
            "Technology Adoption Targets",
            "Scalability Readiness Goals",
            "Innovation Implementation Objectives"
          ]
        }
      ]
    },

    "pf:metricsAlignment": {
      "@type": "pf:MetricsComponent",
      "pf:metricsFramework": {
        "@type": "pf:MetricsArchitecture",
        "pf:primaryMetricsDomains": [
          {
            "@type": "pf:MetricsDomain",
            "name": "Operational Performance Metrics",
            "pf:metricTypes": [
