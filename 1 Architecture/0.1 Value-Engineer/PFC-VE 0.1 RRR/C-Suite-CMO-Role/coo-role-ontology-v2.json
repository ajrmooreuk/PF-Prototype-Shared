            "@type": "pf:MetricsDomain",
            "name": "Strategic Performance Metrics",
            "pf:metricTypes": [
              "Strategy Execution Progress",
              "Capability Maturity Scores",
              "Transformation Milestone Achievement",
              "Innovation Pipeline Health"
            ]
          },
          {
            "@type": "pf:MetricsDomain",
