  "@id": "csuite:ChiefOperatingOfficer",
  "@type": ["Role", "csuite:ExecutiveRole"],
  "name": "Chief Operating Officer",
  "alternateName": ["COO", "Chief Operations Officer"],
  "version": "2.0.0",
  "dateCreated": "2025-01-01",
  "description": "Enterprise-scope ontology defining the Chief Operating Officer role with delegated functional strategy accountability for organizational Operations Strategy, reporting to CEO with Board accountability cascade.",
  
  "pf:ontologyMetadata": {
    "@type": "pf:OntologyDefinition",
    "pf:frameworkAlignment": "PF Core Value Engineering",
    "pf:vsomIntegration": true,
    "pf:extensionArchitecture": "Modular",
    "pf:scopeLevel": "Enterprise-Generic",
    "pf:specializationReadiness": ["Sector", "Organization", "Scale", "Maturity", "Portfolio"]
  },

  "csuite:roleDefinition": {
    "@type": "csuite:ExecutiveRoleDefinition",
    "@id": "csuite:COO-RoleDefinition",
    
    "csuite:corePurpose": {
      "@type": "csuite:RolePurpose",
      "description": "Translate organizational strategy into operational excellence through systematic execution, process optimization, and resource orchestration while ensuring sustainable value delivery across all operational domains.",
      "csuite:valueProposition": [
        "Strategy-to-Execution Translation",
        "Operational Excellence Delivery",
        "Cross-Functional Integration",
        "Scalable Systems Architecture",
        "Sustainable Performance Optimization"
      ]
    },

    "csuite:accountabilityChain": {
      "@type": "csuite:GovernanceAccountability",
      "csuite:primaryAccountability": {
        "@type": "csuite:AccountabilityRelationship",
        "csuite:accountableTo": {
          "@type": "csuite:ExecutiveRole",
          "@id": "csuite:ChiefExecutiveOfficer",
          "name": "Chief Executive Officer"
        },
        "csuite:accountabilityType": "Direct-Line",
        "csuite:accountabilityScope": [
          "Operational Performance",
          "Strategy Execution",
          "Resource Utilization",
          "Process Efficiency",
          "Operational Risk Management"
        ]
      },
      "csuite:ultimateAccountability": {
        "@type": "gov:BoardAccountability",
        "csuite:accountableTo": {
          "@type": "Organization",
          "@id": "gov:BoardOfDirectors",
          "name": "Board of Directors"
        },
        "csuite:accountabilityType": "Delegated-via-CEO",
        "csuite:accountabilityScope": [
          "Operational Strategy Alignment",
          "Fiduciary Operational Performance",
          "Risk Governance Compliance",
          "Stakeholder Value Delivery"
        ]
      }
    },

    "csuite:strategyInfluence": {
      "@type": "strat:StrategyInfluenceModel",
      "strat:influenceLevel": "Substantial",
      "strat:influenceScope": [
        {
          "@type": "strat:InfluenceDomain",
          "name": "Overall Organizational Strategy",
          "strat:influenceType": "Advisory-Input",
          "strat:contributionAreas": [
            "Operational Feasibility Assessment",
            "Execution Capacity Evaluation",
            "Resource Requirement Forecasting",
            "Implementation Timeline Estimation",
            "Risk Identification"
          ]
        },
        {
          "@type": "strat:InfluenceDomain",
          "name": "Operations Strategy",
          "strat:influenceType": "Delegated-Accountability",
          "strat:contributionAreas": [
            "Strategy Formulation",
            "Strategy Execution",
            "Performance Management",
            "Continuous Improvement"
          ]
        }
      ]
    }
  },

  "csuite:vsomAlignment": {
    "@type": "pf:VSOMFramework",
    "@id": "pf:COO-VSOM-Alignment",
    "description": "Integration with PF Core Value Engineering VSOM framework",
    
    "pf:visionAlignment": {
      "@type": "pf:VisionComponent",
      "pf:alignmentResponsibility": "Operational Vision Translation",
      "pf:deliverables": [
        "Operational Excellence Vision Statement",
        "Future State Operating Model",
        "Capability Development Roadmap",
        "Technology Enablement Vision"
      ],
      "pf:cascadeDirection": "Top-Down-from-Corporate-Vision"
