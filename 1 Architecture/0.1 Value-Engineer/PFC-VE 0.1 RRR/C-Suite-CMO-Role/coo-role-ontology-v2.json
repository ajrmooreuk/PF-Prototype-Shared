              "Productivity Indicators",
              "Quality Scores",
              "Cycle Time Measures",
              "Throughput Metrics"
            ]
          },
          {
            "@type": "pf:MetricsDomain",
            "name": "Financial Performance Metrics",
            "pf:metricTypes": [
