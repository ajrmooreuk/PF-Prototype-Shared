      "ontologyId": "pf-core:ontology:vsom-v1",
      "integrationType": "upstream_dependency",
      "connections": [
        {
          "entity": "ValueProposition",
          "property": "vsomAlignment",
          "references": "vsom:StrategicObjective",
          "description": "Value propositions align with VSOM strategic objectives"
        }
      ]
    },
    "okr": {
      "ontologyId": "pf-core:ontology:okr-v1",
      "integrationType": "downstream_consumer",
      "connections": [
        {
          "entity": "ValueProposition",
          "feeds": "okr:Objective",
          "description": "Validated value propositions inform OKR objective setting"
        }
      ]
    },
    "roles_raci_rbac": {
      "ontologyId": "pf-core:ontology:roles-raci-rbac-v3",
      "integrationType": "cross_reference",
      "connections": [
        {
          "entity": "CustomerSegment.decisionMakers",
          "references": "rrr:ExecutiveRole",
          "description": "Decision makers map to organizational roles"
        }
      ]
    }
  }
}
