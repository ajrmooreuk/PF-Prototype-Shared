        subgraph Primitives["Layout Primitives"]
            direction LR
            Container[Container<br/>full narrow standard wide]
            Stack[Stack<br/>tight default relaxed loose]
            Inline[Inline<br/>horizontal wrapping]
            Grid[Grid<br/>responsive fixed masonry]
            Sidebar[Sidebar<br/>left right]
        end
        
        subgraph PageLayouts["Page Layouts"]
            direction TB
            
            Landing[Landing Page<br/>hero ‚Üí features ‚Üí cta]
            Dashboard[Dashboard<br/>header + sidebar + content]
            Article[Article<br/>narrow content + related]
            Form[Form<br/>centered narrow]
