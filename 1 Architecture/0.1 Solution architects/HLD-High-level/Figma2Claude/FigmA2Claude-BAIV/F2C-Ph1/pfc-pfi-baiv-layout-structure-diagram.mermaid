    Tokens --> LayoutSystem
    LayoutSystem --> CodeOutput
    
    classDef primitive fill:#00A4BF,stroke:#008DA3,stroke-width:2px,color:#fff
    classDef page fill:#E84E1C,stroke:#D14418,stroke-width:2px,color:#fff
    classDef component fill:#CEC528,stroke:#B8B124,stroke-width:2px,color:#000
    classDef responsive fill:#10B981,stroke:#059669,stroke-width:2px,color:#fff
    
    class Container,Stack,Inline,Grid,Sidebar primitive
