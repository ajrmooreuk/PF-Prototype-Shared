  "components": {
    "button": {
      "@type": "ComponentSpecification",
      "description": "Interactive button component with multiple variants and sizes",
      "variants": ["primary", "secondary", "outline", "ghost", "destructive"],
      "sizes": {
        "sm": {
          "height": 32,
          "paddingX": 12,
          "paddingY": 6,
          "fontSize": { "alias": "tokens.typography.fontSize.sm" },
          "borderRadius": { "alias": "tokens.borderRadius.base" }
        },
        "md": {
          "height": 40,
          "paddingX": 16,
          "paddingY": 8,
          "fontSize": { "alias": "tokens.typography.fontSize.base" },
          "borderRadius": { "alias": "tokens.borderRadius.md" }
        },
        "lg": {
          "height": 48,
          "paddingX": 24,
          "paddingY": 12,
          "fontSize": { "alias": "tokens.typography.fontSize.lg" },
          "borderRadius": { "alias": "tokens.borderRadius.lg" }
        }
      },
      "states": ["default", "hover", "active", "focus", "disabled"],
      "accessibility": {
        "minTouchTarget": "44px",
        "keyboardNavigable": true,
        "ariaLabel": "required"
      }
    },
    "card": {
      "@type": "ComponentSpecification",
      "description": "Container component for grouping related content",
      "variants": ["default", "elevated", "outlined"],
      "padding": {
        "sm": { "alias": "tokens.spacing.4" },
        "md": { "alias": "tokens.spacing.6" },
        "lg": { "alias": "tokens.spacing.8" }
      },
      "borderRadius": { "alias": "tokens.borderRadius.lg" },
      "borderWidth": "1px"
    },
    "input": {
      "@type": "ComponentSpecification",
      "description": "Form input component for user data entry",
      "height": {
        "sm": 32,
        "md": 40,
        "lg": 48
      },
      "paddingX": {
        "sm": 12,
        "md": 16,
        "lg": 20
      },
      "fontSize": {
        "sm": { "alias": "tokens.typography.fontSize.sm" },
        "md": { "alias": "tokens.typography.fontSize.base" },
        "lg": { "alias": "tokens.typography.fontSize.lg" }
      },
      "borderRadius": { "alias": "tokens.borderRadius.md" },
      "borderWidth": "1px",
      "states": ["default", "hover", "focus", "error", "disabled"]
    }
  },

  "namingConventions": {
    "tokens": {
      "format": "kebab-case",
      "hierarchy": "dot.notation.path",
      "example": "tokens.colors.semantic.primary.default"
    },
    "figmaVariables": {
      "collections": "PascalCase",
      "modes": "PascalCase",
      "variables": "kebab-case with / separators",
      "example": "semantic/primary/default"
    },
    "cssVariables": {
      "prefix": "--baiv-",
      "format": "kebab-case",
      "example": "--baiv-color-primary-default"
    },
    "tailwind": {
      "format": "kebab-case",
      "example": "bg-primary hover:bg-primary-hover"
    }
  },

  "generationRules": {
    "figmaMakePrompts": {
      "colorReferences": "Always use BAIV brand colors: Primary #00A4BF, Secondary #E84E1C, Accent #CEC528",
      "typography": "Use Titillium Web for headings, Open Sans for body text",
      "spacing": "Follow 4px base grid, use spacing tokens (4, 8, 12, 16, 24, 32, 48, 64)",
      "borderRadius": "Default to 6px (md), 8px (lg) for cards, 4px (base) for inputs",
      "shadows": "Use md shadow for cards, lg for modals, sm for subtle elevation"
    },
    "claudeCodeGeneration": {
      "framework": "Next.js 14+ with App Router",
      "styling": "Tailwind CSS with shadcn/ui components",
      "tokenImport": "Import from @/lib/design-tokens",
      "componentStructure": "Atomic design - atoms, molecules, organisms",
      "typeScript": "Strict mode, full type coverage",
      "accessibility": "WCAG 2.1 AA minimum, semantic HTML, ARIA labels"
    },
    "mcpExtraction": {
      "layerNaming": "Follow convention: [component-type]/[variant]/[size]",
      "autoLayout": "Always use Figma auto-layout for responsive components",
      "constraints": "Set appropriate constraints for responsive behavior",
      "components": "Convert repeated elements to Figma components"
    }
  }
}
