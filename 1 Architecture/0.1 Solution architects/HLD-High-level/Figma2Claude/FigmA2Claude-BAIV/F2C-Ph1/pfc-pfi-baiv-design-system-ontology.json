{
  "$schema": "http://schema.org/DefinedTermSet",
  "@context": "https://schema.org",
  "@type": "DefinedTermSet",
  "name": "PFC-PFI-BAIV Design System Ontology",
  "description": "Comprehensive design token ontology for the BAIV design system, spanning primitive tokens through semantic aliasing to component specifications. Supports Figma Make AI-generated layouts, MCP extraction, and Claude-generated React/Next.js code.",
  "version": "3.0.0",
  "dateModified": "2025-01-03",
  "publisher": {
    "@type": "Organization",
    "name": "PFC-PFI",
    "description": "Be AI Visible Design System"
  },
  "inLanguage": "en-US",
  "license": "https://creativecommons.org/licenses/by/4.0/",

  "metadata": {
    "taxonomy": "3-layer token system",
    "layers": {
      "primitive": "Raw design values (colors, sizes, etc.)",
      "semantic": "Context-based aliases (primary, secondary, etc.)",
      "component": "Specific component applications (button-bg, card-border, etc.)"
    },
    "namingConvention": "kebab-case with dot notation for hierarchy",
    "figmaIntegration": "Direct mapping to Figma variables and collections",
    "codeOutput": "CSS variables, Tailwind config, shadcn/ui themes"
  },

  "tokens": {
    "colors": {
      "primitive": {
        "brand": {
          "@type": "ColorPalette",
          "primary": {
            "value": "#00A4BF",
            "name": "BAIV Teal",
            "description": "Primary brand color - trust, clarity, innovation",
            "wcag": {
              "aa": true,
              "aaa": false,
              "contrastRatio": 4.52
            }
          },
          "secondary": {
            "value": "#E84E1C",
            "name": "BAIV Orange",
            "description": "Secondary brand color - energy, action, warmth",
            "wcag": {
              "aa": true,
              "aaa": false,
              "contrastRatio": 4.21
            }
          },
          "accent": {
            "value": "#CEC528",
            "name": "BAIV Gold",
            "description": "Accent color - highlight, premium, attention",
            "wcag": {
              "aa": true,
              "aaa": false,
              "contrastRatio": 4.89
            }
          }
        },
        "neutral": {
          "@type": "ColorPalette",
          "50": { "value": "#FAFAFA", "description": "Lightest neutral" },
          "100": { "value": "#F5F5F5", "description": "Very light neutral" },
          "200": { "value": "#E5E5E5", "description": "Light neutral" },
          "300": { "value": "#D4D4D4", "description": "Medium-light neutral" },
          "400": { "value": "#A3A3A3", "description": "Medium neutral" },
          "500": { "value": "#737373", "description": "Medium-dark neutral" },
          "600": { "value": "#525252", "description": "Dark neutral" },
          "700": { "value": "#404040", "description": "Very dark neutral" },
          "800": { "value": "#262626", "description": "Nearly black" },
          "900": { "value": "#171717", "description": "Darkest neutral" }
        },
        "status": {
          "@type": "ColorPalette",
          "success": {
            "value": "#10B981",
            "name": "Success Green",
            "description": "Positive actions, confirmations, success states"
          },
          "warning": {
            "value": "#F59E0B",
            "name": "Warning Amber",
            "description": "Caution, alerts, important notices"
          },
          "error": {
            "value": "#EF4444",
            "name": "Error Red",
            "description": "Errors, destructive actions, critical alerts"
          },
          "info": {
            "value": "#3B82F6",
            "name": "Info Blue",
            "description": "Informational messages, guidance, tips"
          }
        },
        "semantic": {
          "@type": "ColorPalette",
          "white": { "value": "#FFFFFF", "description": "Pure white" },
          "black": { "value": "#000000", "description": "Pure black" }
        }
      },
      "semantic": {
        "primary": {
          "default": { "alias": "primitive.brand.primary", "description": "Primary interactive elements" },
          "hover": { "value": "#008DA3", "description": "Primary hover state (10% darker)" },
          "active": { "value": "#007A8F", "description": "Primary active state (15% darker)" },
          "disabled": { "value": "#80D2DF", "description": "Primary disabled state (50% opacity)" }
        },
        "secondary": {
          "default": { "alias": "primitive.brand.secondary", "description": "Secondary interactive elements" },
          "hover": { "value": "#D14418", "description": "Secondary hover state (10% darker)" },
          "active": { "value": "#BA3D15", "description": "Secondary active state (15% darker)" },
          "disabled": { "value": "#F4A78E", "description": "Secondary disabled state (50% opacity)" }
        },
        "accent": {
          "default": { "alias": "primitive.brand.accent", "description": "Accent highlights" },
          "hover": { "value": "#B8B124", "description": "Accent hover state (10% darker)" },
          "active": { "value": "#A39E20", "description": "Accent active state (15% darker)" },
          "disabled": { "value": "#E7E294", "description": "Accent disabled state (50% opacity)" }
        },
        "text": {
          "primary": { "alias": "primitive.neutral.900", "description": "Primary text color" },
          "secondary": { "alias": "primitive.neutral.600", "description": "Secondary text color" },
          "tertiary": { "alias": "primitive.neutral.500", "description": "Tertiary text color" },
          "disabled": { "alias": "primitive.neutral.400", "description": "Disabled text color" },
          "inverse": { "alias": "primitive.semantic.white", "description": "Text on dark backgrounds" }
        },
        "background": {
          "primary": { "alias": "primitive.semantic.white", "description": "Primary background" },
          "secondary": { "alias": "primitive.neutral.50", "description": "Secondary background" },
          "tertiary": { "alias": "primitive.neutral.100", "description": "Tertiary background" },
          "inverse": { "alias": "primitive.neutral.900", "description": "Dark background" }
        },
        "border": {
          "default": { "alias": "primitive.neutral.200", "description": "Default border color" },
          "hover": { "alias": "primitive.neutral.300", "description": "Border hover state" },
          "focus": { "alias": "primitive.brand.primary", "description": "Border focus state" },
          "error": { "alias": "primitive.status.error", "description": "Error border color" }
        }
      },
      "component": {
        "button": {
          "primary": {
            "bg": { "alias": "semantic.primary.default" },
            "bgHover": { "alias": "semantic.primary.hover" },
            "bgActive": { "alias": "semantic.primary.active" },
            "bgDisabled": { "alias": "semantic.primary.disabled" },
            "text": { "alias": "semantic.text.inverse" },
            "border": { "value": "transparent" }
          },
          "secondary": {
            "bg": { "alias": "semantic.secondary.default" },
            "bgHover": { "alias": "semantic.secondary.hover" },
            "bgActive": { "alias": "semantic.secondary.active" },
            "bgDisabled": { "alias": "semantic.secondary.disabled" },
            "text": { "alias": "semantic.text.inverse" },
            "border": { "value": "transparent" }
          },
          "outline": {
            "bg": { "value": "transparent" },
            "bgHover": { "alias": "semantic.background.secondary" },
            "bgActive": { "alias": "semantic.background.tertiary" },
            "text": { "alias": "semantic.primary.default" },
            "textHover": { "alias": "semantic.primary.hover" },
            "border": { "alias": "semantic.border.default" },
            "borderHover": { "alias": "semantic.border.hover" }
          },
          "ghost": {
            "bg": { "value": "transparent" },
            "bgHover": { "alias": "semantic.background.secondary" },
            "bgActive": { "alias": "semantic.background.tertiary" },
            "text": { "alias": "semantic.text.primary" },
            "border": { "value": "transparent" }
          },
          "destructive": {
            "bg": { "alias": "primitive.status.error" },
            "bgHover": { "value": "#DC2626" },
            "bgActive": { "value": "#B91C1C" },
            "text": { "alias": "semantic.text.inverse" },
            "border": { "value": "transparent" }
          }
        },
        "card": {
          "default": {
            "bg": { "alias": "semantic.background.primary" },
            "border": { "alias": "semantic.border.default" },
            "text": { "alias": "semantic.text.primary" }
          },
          "elevated": {
            "bg": { "alias": "semantic.background.primary" },
            "border": { "value": "transparent" },
            "shadow": { "alias": "primitive.shadow.md" },
            "text": { "alias": "semantic.text.primary" }
          },
          "outlined": {
            "bg": { "value": "transparent" },
            "border": { "alias": "semantic.border.default" },
            "text": { "alias": "semantic.text.primary" }
          }
        },
        "input": {
          "default": {
            "bg": { "alias": "semantic.background.primary" },
            "border": { "alias": "semantic.border.default" },
            "borderHover": { "alias": "semantic.border.hover" },
            "borderFocus": { "alias": "semantic.border.focus" },
            "borderError": { "alias": "semantic.border.error" },
            "text": { "alias": "semantic.text.primary" },
            "placeholder": { "alias": "semantic.text.tertiary" }
          }
        }
      }
    },

    "typography": {
      "fontFamily": {
        "heading": {
          "value": "'Titillium Web', sans-serif",
          "description": "Headings, titles, navigation - modern, geometric, strong"
        },
        "body": {
          "value": "'Open Sans', sans-serif",
          "description": "Body text, descriptions, UI labels - readable, friendly, neutral"
        },
        "mono": {
          "value": "'JetBrains Mono', monospace",
          "description": "Code, technical content, data display"
        }
      },
      "fontSize": {
        "xs": { "value": "12px", "lineHeight": "16px", "rem": "0.75rem" },
        "sm": { "value": "14px", "lineHeight": "20px", "rem": "0.875rem" },
        "base": { "value": "16px", "lineHeight": "24px", "rem": "1rem" },
        "lg": { "value": "18px", "lineHeight": "28px", "rem": "1.125rem" },
        "xl": { "value": "20px", "lineHeight": "28px", "rem": "1.25rem" },
