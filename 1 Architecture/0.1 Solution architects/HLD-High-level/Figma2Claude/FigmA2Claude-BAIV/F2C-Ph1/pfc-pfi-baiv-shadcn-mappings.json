  },

  "componentMappings": {
    "button": {
      "variants": {
        "default": {
          "baivEquivalent": "component.button.primary",
          "cssClasses": "bg-primary text-primary-foreground hover:bg-primary/90",
          "tokenMapping": {
            "background": "tokens.colors.component.button.primary.bg",
            "text": "tokens.colors.component.button.primary.text",
            "hover": "tokens.colors.component.button.primary.bgHover"
          }
        },
        "secondary": {
          "baivEquivalent": "component.button.secondary",
          "cssClasses": "bg-secondary text-secondary-foreground hover:bg-secondary/80",
          "tokenMapping": {
            "background": "tokens.colors.component.button.secondary.bg",
            "text": "tokens.colors.component.button.secondary.text"
          }
        },
        "destructive": {
          "baivEquivalent": "component.button.destructive",
          "cssClasses": "bg-destructive text-destructive-foreground hover:bg-destructive/90",
          "tokenMapping": {
            "background": "tokens.colors.component.button.destructive.bg",
            "text": "tokens.colors.component.button.destructive.text"
          }
        },
        "outline": {
          "baivEquivalent": "component.button.outline",
          "cssClasses": "border border-input bg-background hover:bg-accent hover:text-accent-foreground",
          "tokenMapping": {
            "border": "tokens.colors.component.button.outline.border",
            "background": "tokens.colors.component.button.outline.bg",
            "text": "tokens.colors.component.button.outline.text"
          }
        },
        "ghost": {
          "baivEquivalent": "component.button.ghost",
          "cssClasses": "hover:bg-accent hover:text-accent-foreground",
          "tokenMapping": {
            "background": "tokens.colors.component.button.ghost.bg",
            "hover": "tokens.colors.component.button.ghost.bgHover"
          }
        }
      },
      "sizes": {
        "sm": {
          "baivEquivalent": "components.button.sizes.sm",
          "height": "32px",
          "padding": "0 12px",
          "fontSize": "0.875rem"
        },
        "default": {
          "baivEquivalent": "components.button.sizes.md",
          "height": "40px",
          "padding": "0 16px",
          "fontSize": "1rem"
        },
        "lg": {
          "baivEquivalent": "components.button.sizes.lg",
          "height": "48px",
          "padding": "0 24px",
          "fontSize": "1.125rem"
        }
      }
    },

    "card": {
      "default": {
        "baivEquivalent": "component.card.default",
        "cssClasses": "rounded-lg border bg-card text-card-foreground shadow-sm",
        "tokenMapping": {
          "background": "tokens.colors.component.card.default.bg",
          "border": "tokens.colors.component.card.default.border",
          "borderRadius": "tokens.borderRadius.lg",
          "shadow": "tokens.shadow.primitive.sm"
        }
      }
    },

    "input": {
      "default": {
        "baivEquivalent": "component.input.default",
        "cssClasses": "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2",
        "tokenMapping": {
          "height": "40px",
          "borderRadius": "tokens.borderRadius.md",
          "border": "tokens.colors.component.input.default.border",
          "background": "tokens.colors.component.input.default.bg",
          "padding": "tokens.spacing.3"
        }
      }
    },

    "badge": {
      "variants": {
        "default": {
          "cssClasses": "bg-primary text-primary-foreground hover:bg-primary/80",
          "tokenMapping": {
            "background": "tokens.colors.primitive.brand.primary",
            "text": "tokens.colors.semantic.text.inverse"
          }
        },
        "secondary": {
          "cssClasses": "bg-secondary text-secondary-foreground hover:bg-secondary/80",
          "tokenMapping": {
            "background": "tokens.colors.primitive.brand.secondary",
            "text": "tokens.colors.semantic.text.inverse"
          }
        }
      }
    },

    "alert": {
      "variants": {
        "default": {
          "cssClasses": "bg-background text-foreground",
          "tokenMapping": {
            "background": "tokens.colors.semantic.background.primary",
            "border": "tokens.colors.semantic.border.default"
          }
        },
        "destructive": {
          "cssClasses": "border-destructive/50 text-destructive",
          "tokenMapping": {
            "border": "tokens.colors.primitive.status.error",
            "text": "tokens.colors.primitive.status.error"
          }
        }
      }
    }
  },

  "generationRules": {
    "cssVariableGeneration": {
      "format": "HSL",
      "prefix": "",
      "darkMode": "class",
      "example": "--primary: 188 100% 37%;"
    },
    "tailwindConfig": {
      "extend": {
        "colors": "Map BAIV tokens to Tailwind color palette",
        "fontFamily": "Import BAIV font families",
        "borderRadius": "Use BAIV border radius values",
        "boxShadow": "Map BAIV shadow tokens"
      }
    },
    "componentGeneration": {
      "framework": "React + TypeScript",
      "styling": "Tailwind CSS classes",
      "variants": "Use cva (class-variance-authority)",
      "accessibility": "Include ARIA attributes"
    }
  },

  "integrationWorkflow": {
    "step1": {
      "name": "Generate CSS Variables",
      "action": "Convert BAIV tokens to shadcn CSS variables",
      "output": "globals.css with :root and .dark definitions"
    },
    "step2": {
      "name": "Configure Tailwind",
      "action": "Extend Tailwind config with BAIV tokens",
      "output": "tailwind.config.ts"
    },
    "step3": {
      "name": "Install shadcn Components",
      "action": "Run npx shadcn@latest add [component]",
      "note": "Components auto-use BAIV theme"
    },
    "step4": {
      "name": "Customize Components",
      "action": "Adjust component variants to match BAIV specs",
      "output": "Modified component files in /components/ui/"
    }
  }
}
