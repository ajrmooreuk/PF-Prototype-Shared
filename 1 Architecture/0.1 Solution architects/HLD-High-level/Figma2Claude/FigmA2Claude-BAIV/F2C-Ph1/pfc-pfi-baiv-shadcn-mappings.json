{
  "$schema": "http://schema.org/SoftwareSourceCode",
  "@context": "https://schema.org",
  "@type": "SoftwareSourceCode",
  "name": "PFC-PFI-BAIV shadcn/ui Mappings",
  "description": "Complete mapping between BAIV design system tokens and shadcn/ui component system. Enables automated theming and component generation with design system compliance.",
  "version": "3.0.0",
  "dateModified": "2025-01-03",
  "programmingLanguage": "TypeScript",
  "runtimePlatform": ["Next.js", "React"],
  "targetProduct": {
    "@type": "SoftwareApplication",
    "name": "shadcn/ui",
    "url": "https://ui.shadcn.com"
  },

  "metadata": {
    "purpose": "Bridge BAIV design tokens to shadcn/ui theme configuration",
    "shadcnVersion": "latest",
    "integration": "Direct CSS variable mapping + component props",
    "automation": "Generate shadcn theme from ontology tokens"
  },

