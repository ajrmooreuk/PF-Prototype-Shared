{
  "$schema": "https://design-tokens.org/schema.json",
  "brand": {
    "$description": "Brand identity tokens",
    "novatech": {
      "name": {
        "$value": "NovaTech",
        "$type": "string"
      },
      "slug": {
        "$value": "novatech",
        "$type": "string"
      },
      "tagline": {
        "$value": "Innovation at the speed of thought",
        "$type": "string"
      }
    },
    "baiv": {
      "name": {
        "$value": "Be AI Visible",
        "$type": "string"
      },
      "slug": {
        "$value": "be-ai-visible",
        "$type": "string"
      },
      "tagline": {
        "$value": "innovative",
        "$type": "string"
      }
    }
  },
  "color": {
    "$description": "Color tokens for both brand variants",
    "primitive": {
      "$description": "Raw color values - do not use directly in designs",
      "blue": {
        "500": { "$value": "#3B82F6", "$type": "color" },
        "400": { "$value": "#60A5FA", "$type": "color" },
        "600": { "$value": "#2563EB", "$type": "color" }
      },
      "teal": {
        "500": { "$value": "#00a4bf", "$type": "color" },
        "600": { "$value": "#005260", "$type": "color" }
      },
      "purple": {
        "500": { "$value": "#8B5CF6", "$type": "color" }
      },
      "orange": {
        "500": { "$value": "#e84e1c", "$type": "color" }
      },
      "pink": {
        "500": { "$value": "#EC4899", "$type": "color" },
        "600": { "$value": "#cf057d", "$type": "color" }
      },
      "gold": {
        "500": { "$value": "#cec528", "$type": "color" }
      },
      "slate": {
        "500": { "$value": "#64748B", "$type": "color" }
      },
      "cyan": {
        "100": { "$value": "#cce8ee", "$type": "color" }
      },
      "green": {
        "500": { "$value": "#10B981", "$type": "color" },
        "600": { "$value": "#019587", "$type": "color" }
      },
      "amber": {
        "500": { "$value": "#F59E0B", "$type": "color" }
      },
      "red": {
        "500": { "$value": "#EF4444", "$type": "color" }
      },
      "navy": {
        "700": { "$value": "#1c3e8e", "$type": "color" }
      }
    },
    "novatech": {
      "$description": "NovaTech brand colors",
      "primary": {
        "default": { "$value": "{color.primitive.blue.500}", "$type": "color" },
        "light": { "$value": "{color.primitive.blue.400}", "$type": "color" },
        "dark": { "$value": "{color.primitive.blue.600}", "$type": "color" }
      },
      "secondary": {
        "default": { "$value": "{color.primitive.purple.500}", "$type": "color" }
      },
      "accent": {
        "default": { "$value": "{color.primitive.pink.500}", "$type": "color" }
      },
      "neutral": {
        "default": { "$value": "{color.primitive.slate.500}", "$type": "color" }
      },
      "success": {
        "default": { "$value": "{color.primitive.green.500}", "$type": "color" }
      },
      "warning": {
        "default": { "$value": "{color.primitive.amber.500}", "$type": "color" }
      },
      "error": {
        "default": { "$value": "{color.primitive.red.500}", "$type": "color" }
      },
      "info": {
        "default": { "$value": "{color.primitive.blue.500}", "$type": "color" }
      }
    },
    "baiv": {
      "$description": "Be AI Visible brand colors",
      "primary": {
        "default": { "$value": "{color.primitive.teal.500}", "$type": "color" },
        "light": { "$value": "{color.primitive.teal.500}", "$type": "color" },
        "dark": { "$value": "{color.primitive.teal.600}", "$type": "color" }
      },
      "secondary": {
        "default": { "$value": "{color.primitive.orange.500}", "$type": "color" }
      },
      "accent": {
        "default": { "$value": "{color.primitive.gold.500}", "$type": "color" }
      },
      "neutral": {
        "default": { "$value": "{color.primitive.cyan.100}", "$type": "color" }
      },
      "success": {
        "default": { "$value": "{color.primitive.green.600}", "$type": "color" }
      },
      "warning": {
        "default": { "$value": "{color.primitive.pink.600}", "$type": "color" }
      },
      "error": {
        "default": { "$value": "{color.primitive.gold.500}", "$type": "color" }
      },
      "info": {
        "default": { "$value": "{color.primitive.navy.700}", "$type": "color" }
      }
    }
  },
  "typography": {
    "$description": "Typography tokens",
    "fontFamily": {
      "novatech": {
        "heading": { "$value": "Inter", "$type": "fontFamily" },
        "body": { "$value": "Space Grotesk", "$type": "fontFamily" },
        "mono": { "$value": "Roboto Mono", "$type": "fontFamily" }
      },
      "baiv": {
        "heading": { "$value": "Open Sans", "$type": "fontFamily" },
        "body": { "$value": "Titillium Web", "$type": "fontFamily" },
        "mono": { "$value": "Roboto Mono", "$type": "fontFamily" }
      }
    },
    "fontWeight": {
      "regular": { "$value": "400", "$type": "fontWeight" },
      "medium": { "$value": "500", "$type": "fontWeight" },
      "semibold": { "$value": "600", "$type": "fontWeight" },
      "bold": { "$value": "700", "$type": "fontWeight" }
    },
    "fontSize": {
      "xs": { "$value": "12px", "$type": "dimension" },
      "sm": { "$value": "14px", "$type": "dimension" },
      "base": { "$value": "16px", "$type": "dimension" },
      "lg": { "$value": "18px", "$type": "dimension" },
      "xl": { "$value": "20px", "$type": "dimension" },
      "2xl": { "$value": "24px", "$type": "dimension" },
      "3xl": { "$value": "30px", "$type": "dimension" },
      "4xl": { "$value": "36px", "$type": "dimension" }
    },
    "lineHeight": {
      "tight": { "$value": "1.25", "$type": "number" },
      "normal": { "$value": "1.5", "$type": "number" },
      "relaxed": { "$value": "1.75", "$type": "number" }
    }
  },
  "spacing": {
    "$description": "Spacing scale based on 8px grid",
    "0": { "$value": "0px", "$type": "dimension" },
    "1": { "$value": "4px", "$type": "dimension" },
    "2": { "$value": "8px", "$type": "dimension" },
    "3": { "$value": "12px", "$type": "dimension" },
    "4": { "$value": "16px", "$type": "dimension" },
    "5": { "$value": "20px", "$type": "dimension" },
    "6": { "$value": "24px", "$type": "dimension" },
    "8": { "$value": "32px", "$type": "dimension" },
    "10": { "$value": "40px", "$type": "dimension" },
    "12": { "$value": "48px", "$type": "dimension" },
    "16": { "$value": "64px", "$type": "dimension" },
    "20": { "$value": "80px", "$type": "dimension" },
    "24": { "$value": "96px", "$type": "dimension" }
  },
  "borderRadius": {
    "$description": "Border radius tokens",
    "none": { "$value": "0px", "$type": "dimension" },
    "sm": { "$value": "4px", "$type": "dimension" },
    "md": { "$value": "8px", "$type": "dimension" },
    "lg": { "$value": "12px", "$type": "dimension" },
    "xl": { "$value": "16px", "$type": "dimension" },
    "2xl": { "$value": "24px", "$type": "dimension" },
    "full": { "$value": "9999px", "$type": "dimension" }
  },
  "borderWidth": {
    "$description": "Border width tokens",
    "0": { "$value": "0px", "$type": "dimension" },
    "1": { "$value": "1px", "$type": "dimension" },
    "2": { "$value": "2px", "$type": "dimension" },
    "4": { "$value": "4px", "$type": "dimension" }
  },
  "shadow": {
    "$description": "Box shadow tokens",
    "none": { "$value": "none", "$type": "shadow" },
    "sm": { "$value": "0 1px 2px 0 rgb(0 0 0 / 0.05)", "$type": "shadow" },
    "md": { "$value": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)", "$type": "shadow" },
    "lg": { "$value": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)", "$type": "shadow" },
    "xl": { "$value": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)", "$type": "shadow" }
  },
  "component": {
    "$description": "Component-level design decisions",
    "density": {
      "comfortable": { "$value": "comfortable", "$type": "string" }
    },
    "borderRadius": {
      "default": { "$value": "{borderRadius.md}", "$type": "dimension" }
    },
    "focusVisible": {
      "enabled": { "$value": true, "$type": "boolean" }
    },
    "shadow": {
      "default": { "$value": "{shadow.md}", "$type": "shadow" }
    },
    "animation": {
      "style": { "$value": "subtle", "$type": "string" }
    },
    "reducedMotion": {
      "respect": { "$value": true, "$type": "boolean" }
    },
    "fontSmoothing": {
      "default": { "$value": "normal", "$type": "string" }
    },
    "button": {
      "style": { "$value": "filled", "$type": "string" }
    },
    "link": {
      "style": { "$value": "inherit", "$type": "string" },
      "underline": { "$value": "none", "$type": "string" }
    },
    "input": {
      "style": { "$value": "outlined", "$type": "string" }
    },
    "card": {
      "style": { "$value": "medium", "$type": "string" }
    }
  },
  "breakpoint": {
    "$description": "Responsive breakpoints",
    "sm": { "$value": "640px", "$type": "dimension" },
    "md": { "$value": "768px", "$type": "dimension" },
    "lg": { "$value": "1024px", "$type": "dimension" },
    "xl": { "$value": "1280px", "$type": "dimension" },
    "2xl": { "$value": "1536px", "$type": "dimension" }
  }
}
