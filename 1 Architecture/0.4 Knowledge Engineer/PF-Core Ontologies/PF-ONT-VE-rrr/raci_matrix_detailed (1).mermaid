    class V_DRIVER,S_RESPONSIBLE,CO_RESPONSIBLE,FO_RESPONSIBLE,TO_RESPONSIBLE,B_RESPONSIBLE driverClass
    class V_APPROVER,S_ACCOUNTABLE,CO_ACCOUNTABLE,FO_ACCOUNTABLE,TO_ACCOUNTABLE,B_ACCOUNTABLE approverClass
    class V_CONTRIBUTOR,S_CONSULTED,CO_CONSULTED,FO_CONSULTED,TO_CONSULTED,B_CONSULTED contributorClass
    class V_INFORMED,S_INFORMED,CO_INFORMED,FO_INFORMED,TO_INFORMED,B_INFORMED informedClass